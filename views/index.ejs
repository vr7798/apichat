<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Posts</title>
  </head>
  <body>
    <h1>Posts</h1>
    <a href="/new-post">Criar Novo Post</a>
    <div>
      <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <% if (post.image) { %>
        <img
          src="<%= post.image %>"
          alt="Imagem do Post"
          style="max-width: 300px; border-radius: 100%" />
        <% } %>
      </div>
      <% }) %> <% } else { %>
      <p>Nenhum post encontrado.</p>
      <% } %>
    </div>
  </body>
</html>
